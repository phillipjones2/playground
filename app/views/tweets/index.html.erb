<div id="main-container" class="container-fluid">
  <div class="row">
    <div class="col-xs-12">
      <% flash.each do |name, msg| -%>
      <%= content_tag :div, msg, class: "alert alert-#{name}" %>
      <% end -%>
    </div>
  </div>
  <p id="notice"><%= notice %></p>

<h1>Listing Tweets</h1>

<table class="table table-responsive" >
  <thead>
    <tr>
      <th>Status</th>
      <th>User</th>
      <th>User Id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% Tweet.all.each do |tweet| %>
      <tr>
        <td><%= link_to tweet.status, tweet %></td>
        <td><%= link_to tweet.user.name, tweet.user %></td>
        <td><%= link_to tweet.user.id, tweet.user %></td>
        <td>
          <span class="has-tooltip" data-toggle="tooltip" title="Show Tweet" >
            <%= link_to tweet, class: "btn btn-xs btn-primary" do %>
                <i class="fa fa-eye"></i>
            <% end %>
          </span>
          <span class="has-tooltip" data-toggle="tooltip" title="Edit Tweet" >
            <%= link_to edit_tweet_path(tweet), class: "btn btn-xs btn-primary" do %>
              <i class="fa fa-pencil"></i>
            <% end %>
          </span>
          <span class="has-tooltip" data-toggle="tooltip" title="Delete Tweet" >
            <%= link_to tweet, method: :delete,
              data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger" do %>
              <i class="fa fa-trash"></i>
            <% end %>
          </span>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to new_tweet_path, class:"btn btn-xs btn-success" do %>
  <i class="fa fa-plus" aria-hidden="true"> New Tweet </i>
<% end %>
