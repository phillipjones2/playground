<p id="notice"><%= notice %></p>

<h1 class="col-xs-offset-1">Listing Users</h1>

<table class="table table-responsive col-xs-offset-1">
  <thead >
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Password</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.password %></td>
        <td>

          <span class="has-tooltip" data-toggle="tooltip" title="Show User Info" >
            <%= link_to user, class: "btn btn-xs btn-primary" do %>
                  <i class="fa fa-eye"></i>
              <% end %>
          </span>
          <span class="has-tooltip" data-toggle="tooltip" title="Edit User Info" >
            <%= link_to edit_user_path(user), class: "btn btn-xs btn-primary" do %>
              <i class="fa fa-pencil"></i>
            <% end %>
          </span>
          <span class="has-tooltip" data-toggle="tooltip" title="Delete User" >
            <%= link_to user, method: :delete,
                data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger" do %>
              <i class="fa fa-trash"></i>
            <% end %>
          </span>


        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to new_user_path, class:"btn btn-xs btn-success col-xs-offset-1" do %>
  <i class="fa fa-plus" aria-hidden="true"> New User </i>
<% end %>
